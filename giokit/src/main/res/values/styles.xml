<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GioSdkBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/GioSdkBottomSheetStyle</item>
    </style>

    <style name="GioSdkBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GioHoverTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hover_primary</item>
        <item name="colorPrimaryDark">@color/hover_dark</item>
        <item name="colorAccent">@color/hover_accent</item>
    </style>

    <style name="GioTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/hover_accent</item>
    </style>

    <style name="GioEdittextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/hover_accent</item>
        <item name="colorControlNormal">@color/giokit_bg_grey</item>
    </style>
</resources>